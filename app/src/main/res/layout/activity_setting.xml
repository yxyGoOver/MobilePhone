<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".com.mobile.activity.SettingActivity">
   <TextView
      style="@style/TitleName"
       android:text="设置中心"
       />
   <com.jumu.mobilephone.view.SettingView
       xmlns:mobilesafe="http://schemas.android.com/apk/res/com.jumu.mobilephone"
       android:id="@+id/settingView_update"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       mobilesafe:destitle="自动更新设置"
       mobilesafe:desoff="自动更新已开启"
       mobilesafe:deson="自动更新已关闭"
       />

   <com.jumu.mobilephone.view.SettingView
       xmlns:mobilesafe="http://schemas.android.com/apk/res/com.jumu.mobilephone"
       android:id="@+id/settingView_address"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       mobilesafe:destitle="电话归属地显示设置"
       mobilesafe:desoff="归属地的显示已开启"
       mobilesafe:deson="归属地的显示已关闭"
       />
        <com.jumu.mobilephone.view.SettingChickView
          android:id="@+id/scv_address_toast"
          android:layout_width="match_parent"
         android:layout_height="wrap_content"
        ></com.jumu.mobilephone.view.SettingChickView>
     <com.jumu.mobilephone.view.SettingChickView
        android:id="@+id/scv_locaiton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></com.jumu.mobilephone.view.SettingChickView>
    <com.jumu.mobilephone.view.SettingView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.jumu.mobilephone"
        android:id="@+id/settingView_blacknumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:destitle="黑名单拦截设置"
        mobilesafe:desoff="黑名单拦截已开启"
        mobilesafe:deson="黑名单拦截已关闭"
        />
</LinearLayout>